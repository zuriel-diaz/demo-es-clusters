
[MESSAGES CONTROL]

disable=missing-docstring,bad-continuation,wrong-import-order,no-member,consider-using-f-string,too-many-arguments,unused-argument,invalid-name,redefined-outer-name,duplicate-code,redefined-builtin,broad-except,no-else-raise,try-except-raise,no-else-return,inconsistent-return-statements,unused-variable
max-line-length=150
min-public-methods=1
max-statements=80

[REPORTS]

# Available formats are text, parseable, colorized, json and msvs (visual studio).
output-format=colorized


[TYPECHECK]

# ignored-modules=
# ignored-classes=

[SIMILARITIES]

# Minimum lines number of a similarity.
min-similarity-lines=25

# Ignore comments when computing similarities.
ignore-comments=yes

# Ignore docstrings when computing similarities.
ignore-docstrings=yes

# Ignore imports when computing similarities.
ignore-imports=yes